<li class="col-span-1 flex flex-col divide-y divide-gray-200 rounded-lg bg-white text-center shadow">
    <div class="flex flex-1 flex-col p-8">
        <img class="mx-auto h-32 w-32 flex-shrink-0 rounded-full"
            src="<%= candidateImage %>"
            alt="candidateImage">
        <h3 class="mt-6 text-sm font-medium text-gray-900"><%= candidateName %></h3>
        <dl class="mt-1 flex flex-grow flex-col justify-between">
            <dt class="sr-only">Title</dt>
            <dd class="text-sm text-gray-500"><%= candidateRole %></dd>
            <dt class="sr-only">Role</dt>
            <dd class="mt-3">
                <% candidateSkills.forEach(skill => { %>
                    <%- include('../atoms/skill', skill) %>
                <% }) %>
                <span class="rounded-full bg-[#d2f34c] px-2 py-1 text-xs font-medium text-black-800">2+</span>
            </dd>
        </dl>
        <div class="-mt-px flex mt-4">
            <div class="flex w-0 flex-1">
                <a href=""
                    class="relative -mr-px inline-flex w-0 flex-1 items-center justify-center gap-x-3 rounded-bl-lg border border-transparent py-4 text-sm font-semibold text-gray-900">
                    <%= candidateSalary %>
                </a>
            </div>
            
            <div class="-ml-px flex w-0 flex-1">
                <a href=""
                    class="relative inline-flex w-0 flex-1 items-center justify-center gap-x-3 rounded-br-lg border border-transparent py-4 text-sm font-semibold text-gray-900">
                    <%= candidateLocation %>
                </a>
            </div>
        </div>
        <div class="mt-6 flex items-center justify-center gap-x-6">
            <a href="/candidate-profile" class="rounded-md bg-[#35785b] transition duration-500 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-[#00bf58] focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white" >View Profile</a>
            <a href="/messages" class="rounded-md border border-[#35785b] transition duration-500 px-3.5 py-2.5 text-sm font-semibold text-[#35785b] shadow-sm hover:bg-[#00bf58] hover:text-white hover:border-[#00bf58] focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white" >Message</a>
        </div>
    </div>
</li>