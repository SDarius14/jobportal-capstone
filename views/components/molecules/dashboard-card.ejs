<div
  class="relative overflow-hidden rounded-lg bg-white px-4 pb-12 pt-5 shadow sm:px-6 sm:pt-6"
>
  <dt>
    <div class="absolute rounded-md bg-green-500 p-3"><%- cardIcon %></div>
    <p class="ml-16 truncate text-sm font-medium text-gray-500">
      <%= cardText %>
    </p>
  </dt>
  <dd class="ml-16 flex items-baseline pb-6 sm:pb-7">
    <p class="text-2xl font-semibold text-gray-900"><%= cardNum %></p>
    <p
      class="ml-2 flex items-baseline text-sm font-semibold text-<%= percentColor %>-600"
    >
      <%- percentChange %> <%= percentValue %>
    </p>
    <div class="absolute inset-x-0 bottom-0 bg-gray-50 px-4 py-4 sm:px-6">
      <div class="text-sm">
        <a href="#" class="font-medium text-green-600 hover:text-green-500">
          View all</a
        >
      </div>
    </div>
  </dd>
</div>
