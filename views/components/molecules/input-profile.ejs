
<div class="<%= inputColSize %>">
  <label
    for="<%= inputName %>"
    class="block text-sm font-semibold leading-6 text-gray-900"
    ><%= inputLabel %></label
  >
  <div class="mt-2.5">
    <input
      type="text"
      name="<%= inputName %>"
      id="<%= inputName %>"
      autocomplete="<%= inputName %>"
      placeholder="Please Enter <%= inputLabel %>"
      class="block w-full placeholder:pl-2 placeholder:text-xs  rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
    />
  </div>

</div>
