<div class="page-header bg-[#244034] px-6 py-24 sm:py-32 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
        <h2 class="text-4xl font-bold tracking-tight text-white sm:text-6xl">
            <%= text %>
        </h2>
        <p class="mt-6 text-lg leading-8 text-white font-semibold">
            <%= subtext %>
        </p>

        <div class="shape-02">
            <img src="./assets/images/shape_02.svg" alt="SVG Image" class="svg-img">
        </div>

        <div class="shape-03">
            <img src="./assets/images/shape_03.svg" alt="SVG Image" class="svg-img">
        </div>

        <% if (title === 'Candidates' || title === 'Job Listing') { %>
        <div class="bg-white shadow rounded-lg mt-6">
            <div class="">
                <form class="">
                    <div class="flex flex-col sm:flex-row sm:gap-4 justify-between items-center">
                        
                        <%- include('./position-select') %>

                        <!-- Separator -->
                        <div class="hidden sm:block h-20 w-px bg-gray-200" aria-hidden="true"></div>
                        <div class="sm:hidden w-full border-t border-gray-200" aria-hidden="true"></div>

                        <%- include('./category-select') %>

                        <button 
                            type="submit"
                            class="bg-[#d2f34c] py-4 sm:py-8 sm:rounded-l-none rounded-b-md sm:rounded-r-md h-full w-full flex-grow transition duration-500 text-sm uppercase tracking-wider font-semibold text-black shadow-sm hover:bg-[#00bf58] hover:text-white">
                                Search
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <% } %>
    </div>
</div>