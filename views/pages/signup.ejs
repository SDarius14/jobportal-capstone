const tabs = document.querySelectorAll('.tab')

tabs.forEach((tab, index)=> {
  tab.addEventListener('click', ()=> {
    selectedTab(index)
  })
})

const selectedTab = ( index ) => {
  tabs.forEach((tab, i) => {
    if(i === index){
      tab.classList.add('selected-tab')
    } else {
      tab.classList.remove('selected-tab')
    }
  })
}


</script>

