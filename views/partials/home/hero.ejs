<section>
  <div class="bg-white relative isolate h-screen">
      <div id="particles-js"></div>
    <div class="relative isolate px-4 md:px-0">
    

      <!-- Main Hero -->
        <div class="text-center h-screen flex flex-col justify-center items-center mt-12 sm:mt-20">
          <h1
            class="text-4xl font-bold tracking-tight text-gray-900 sm:text-7xl max-w-xs sm:max-w-md md:max-w-2xl"
          >
            <%= title %>
          </h1>
          <p class="text-base leading-8 text-gray-600"><%= subTitle %></p> 
        
        <!-- Search Section -->
          <div class="mt-4 rounded-lg mx-4 sm:mx-0 bg-white flex w-full sm:max-w-2xl flex-col justify-between border shadow-md border-gray-300 ">
            <form class="w-full p-2 flex flex-col sm:flex-row sm:gap-4 justify-between items-center">
                <!-- Job Category -->
                <%- include('../../components/molecules/category-select') %>
                <!-- Separator -->
                <div class="hidden sm:block h-16 w-px bg-gray-200" aria-hidden="true"></div>
                <div class="sm:hidden w-full border-t border-gray-200" aria-hidden="true"></div>

                <!-- Input Keyword/Title -->
                <%- include('../../components/molecules/hero-input') %>
                

                <a
                  href="/job-list"
                  class="px-14 w-full sm:w-auto flex-grow transition duration-500 rounded-md sm:px-5 py-2 sm:py-6 text-center text-base text-white shadow-sm bg-[#35785b] hover:bg-[#00bf58]"
                >
                  Search
                </a>
            </form>
          </div>
          

          <p class="mt-4 text-sm leading-6 text-gray-900 text-center">
                  <span class="font-semibold"><%= description %></span> 
                  <%= descriptionTwo %>
                </p>
        <!-- /Search Section -->
        <!-- Slider main container -->
        <div class="swiper max-w-full lg:px-8">
          <!-- Additional required wrapper -->
          <div
            class="swiper-wrapper mx-auto mt-10 items-center gap-x-8 flex justify-center"
          >
            <!-- Slides -->
              <div class="swiper-slide">
                <%- include('../../components/atoms/google-icon'); %>
              </div>
              <div class="swiper-slide">
                <%- include('../../components/atoms/shipbob-icon'); %>
              </div>
              <div class="swiper-slide">
                <%- include('../../components/atoms/dribbble-icon'); %>
              </div>
              <div class="swiper-slide">
                <%- include('../../components/atoms/slack-icon'); %>
              </div>
              <div class="swiper-slide">
                <%- include('../../components/atoms/vine-icon'); %>
              </div>
              <div class="swiper-slide">
                <%- include('../../components/atoms/airbnb-icon'); %>
              </div>
              <div class="swiper-slide">
                <%- include('../../components/atoms/google-icon'); %>
              </div>
              <div class="swiper-slide">
                <%- include('../../components/atoms/shipbob-icon'); %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- /Main Hero -->
    </div>


  </div>
</section>

